{
  "name": "vitest-coverage-merge",
  "version": "0.1.0",
  "description": "Merge Vitest unit and browser component test coverage with automatic normalization",
  "author": "Steve Zhang",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vitest-coverage-merge": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vitest",
    "coverage",
    "merge",
    "istanbul",
    "v8",
    "unit-test",
    "component-test",
    "browser-test"
  ],
  "dependencies": {
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7"
  },
  "devDependencies": {
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/istanbul-reports": "^3.0.4",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.7.0",
    "vitest": "^4.0.15"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stevez/vitest-coverage-merge.git"
  },
  "engines": {
    "node": ">=18"
  }
}
